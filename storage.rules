rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'ADMIN';
    }

    function isStaff() {
      return isSignedIn() && request.auth.token.role == 'STAFF';
    }

    function userDoc() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid));
    }

    function isSessionAttendee(sessionId) {
      return userDoc().data.attendingSessions != null && sessionId in userDoc().data.attendingSessions;
    }

    function isSectionPublished(sessionId, sectionId) {
      return firestore.get(/databases/(default)/documents/sessions/$(sessionId)/sections/$(sectionId)).data.isPublished == true;
    }

    match /schedules/{sessionId}/{file} {
      allow read: if isAdmin() || (isStaff() && isSessionAttendee(sessionId));
      allow write: if isAdmin();
    }

    match /schedules/{sessionId}/sections/{sectionId}/{file=**} {
      allow read: if isAdmin() || (isStaff() && isSessionAttendee(sessionId) && isSectionPublished(sessionId, sectionId));
      allow write: if isAdmin();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
